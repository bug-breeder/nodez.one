<svg width="300" height="300" viewBox="0 0 300 300"
     xmlns="http://www.w3.org/2000/svg">
  <!-- Drop shadow filter -->
  <defs>
    <filter id="shadow" x="-20%" y="-150%" width="150%" height="2000%">
      <feDropShadow dx="0" dy="6" stdDeviation="6" flood-color="rgba(0,0,0,0.2)"/>
    </filter>
  </defs>

  <!-- Cạnh trên (filled stroke) -->
  <path d="M60,60 Q150,150 240,60"
        fill="none" stroke="#FF8A80" stroke-width="30"
        stroke-linecap="round" stroke-linejoin="round"
        filter="url(#shadow)"/>

  <!-- Cạnh giữa (S-curve) -->
  <path d="M240,60 C180,240 120,60 60,240"
        fill="none" stroke="#8C9EFF" stroke-width="30"
        stroke-linecap="round" stroke-linejoin="round"
        filter="url(#shadow)"/>

  <!-- Cạnh dưới -->
  <path d="M60,240 Q150,150 240,240"
        fill="none" stroke="#80D8FF" stroke-width="30"
        stroke-linecap="round" stroke-linejoin="round"
        filter="url(#shadow)"/>

  <!-- Nodes với fill đồng nhất, bo tròn -->
  <circle cx="60"  cy="60"  r="40" fill="#FFD180" filter="url(#shadow)"/>
  <circle cx="240" cy="60"  r="40" fill="#CCFF90" filter="url(#shadow)"/>
  <circle cx="60"  cy="240" r="40" fill="#EA80FC" filter="url(#shadow)"/>
  <circle cx="240" cy="240" r="40" fill="#FF9E80" filter="url(#shadow)"/>
</svg>